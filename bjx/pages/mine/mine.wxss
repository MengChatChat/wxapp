/* pages/mine/mine.wxss */
.container {
    background-color: #fff133;
}
.userinfo {
    display: flex;
}
.avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin: 10px 24px 24px 24px;
}
.information {
    margin-top: 10px;
    position: relative;
}
.nickname {
    font-size: 16px;
}
.bjxid {
    font-size: 13px;
    color: #888888;
}
.details {
    position: relative;
    margin-top: 15px;
    margin-bottom: 15px;
    border: 1px solid #eeeeee;
    background-color: #fff;
}
.version {
    display: flex;
    margin: 10px 0 10px 18px;
}
.you {
    width: 15px;
    height: 15px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 10px;
}
.weui-cell__ft_special {
    color: #ff3b30;
    position: relative;
    right: 15px;
}
.appearance {
    background-color: #fff;
    border: 1px solid #eeeeee;
    margin-bottom: 15px;
}